{% extends 'themes/default/app/layout/layout.html.twig' %}

{% block title %}Réservation d'un ticket pour la journée d'inscription à la Cité de la musique{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('default_booking') }}
{% endblock %}

{% block main_content %}

    <div class="ariane">
        <span><a href="{{ path('app_homepage') }}">Accueil</a></span>
        <span class="active"><a href="{{ path('app_booking_index') }}">
            Réservation {{ day is defined ? 'd\'un ticket pour le ' ~ day.fullDateString | lower : null }}
        </a></span>
    </div>

    {% if day is defined %}
        <div id="booking" data-day="{{ day.fullDateString }}" data-id="{{ day.id }}" data-type="{{ day.type }}" data-type-string="{{ day.typeString }}" data-remaining="{{ day.remaining }}" data-days="{{ days }}"></div>
    {% else %}
        <div>
            <div class="section-infos">
                <div class="informations">
                    <h1>Réservation d'un ticket</h1>
                    <p class="subtitle">Aucune journée d'inscription à la cité de la musique n'est ouverte pour le moment.</p>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('default_booking') }}
{% endblock %}